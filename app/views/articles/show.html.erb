<div class="flex w-full px-2 md:px-16 lg:px-32">
  <div class="w-full">
    <%= render @article %>
    <div class="flex justify-end items-center gap-6">
      <% if can? :manage, @article %>
        <%= button_to 'Delete', article_path(@article), method: :delete, class: "mt-2 rounded-lg py-2 px-4 bg-midnight text-white font-medium" %>
      <% end %>
      <%= link_to 'Back', articles_path, class: "mt-2 rounded-lg py-2 px-4 bg-transparent border border-midnight text-midnight font-medium" %>
    </div>
  </div>
</div>
