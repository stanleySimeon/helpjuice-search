<div class="container px-0 flex justify-center items-center pt-16 md:mt-6">
  <div class="w-full md:mt-16 lg:mt-22 md:w-5/12 h-auto backdrop-blur-3xl rounded shadow-lg p-2 md:p-4">
    <div class="w-full h-auto py-2 border-b border-grayLight mb-6 md:mb-12">
      <h2 class="text-center text-md md:text-2xl lg:text-3xl md:text-start text-white">Log In</h2>
    </div>
    <span class="text-sm md:text-lg">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :email, class: "text-white" %><br />
        <%= f.email_field :email, autofocus: false, placeholder: "johndoe@gmail.com", class: "input w-full mt-2 pl-2 mb-3 border-b border-grayLight text-white bg-transparent border-x-0 border-t-0 focus:border-grayLight focus:ring-transparent" %>
        <%= f.label :password, class: "text-white" %><br />
        <%= f.password_field :password, placeholder: "********", class: "input w-full mt-2 pl-2 mb-2 border-grayLight text-white bg-transparent border-x-0 border-t-0 focus:border-grayLight focus:ring-transparent" %>
      <% if devise_mapping.rememberable? %>
        <div class="flex gap-2 items-center">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me, class: "text-grayLight" %>
        </div>
      <% end %>
      <div class="flex justify-start mt-4 space-x-4 mb-3 md:mt-6 lg:mb-8">
        <%= f.submit "Log In", class: "bg-midnight text-white rounded px-4 py-2 hover:bg-skyBluDark cursor:pointer" %>
        <button class="border border-white rounded px-3 py-2">
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-white" %>
        </button>
      </div>
      <% end %>
    </span>
  </div>
</div>
